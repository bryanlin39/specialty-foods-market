<%= render 'layouts/errors', :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5, step: 1 %>
  <br>
  <%= f.submit %>
<% end %>
